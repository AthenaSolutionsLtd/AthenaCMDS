{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es6",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleSuffixes": [".js", ""]
  }
}
